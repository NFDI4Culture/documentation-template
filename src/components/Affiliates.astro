---
import { Image } from "astro:assets";
import config from "../../project/config.json";
import imgApp from "../../project/logo-light.svg";
import imgNFDI4Culture from "../assets/nfdi4culture-logo-light.svg";
---

<section class="affiliates">
    <div>
        <a class="affiliates-app" href={config.appUrl} target="_blank">
            <Image loading="eager" src={imgApp} alt={config.projectName} />
            <span>View Application</span>
        </a>
        <a href="https://nfdi4culture.de" target="_blank">
            <Image loading="eager" src={imgNFDI4Culture} alt="NFDI4Culture" />
        </a>
        <a href="https://www.tib.eu/en/research-development/research-groups-and-labs" target="_blank">
            <Image loading="eager" src="https://www.tib.eu/typo3conf/ext/tib_tmpl_bootstrap/Resources/Public/gfx/logos/tib-full-en.svg" alt="TIB â€“ Leibniz Information Centre for Science and Technology" width="195" height="32" />
        </a>
    </div>
</section>

<style>
    .affiliates div {
        width: fit-content;
        padding: 1rem;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 2.5rem;
    }
    .affiliates img {
        width: auto;
        height: 2rem;
    }
    .affiliates-app {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 0.75em;
        font-weight: 500;
        text-decoration: none;
        color: black !important;
        filter: saturate(0.0) opacity(0.75);
    }
    .affiliates-app:hover {
        filter: opacity(1.0);
    }

    :global([data-theme="dark"]) .affiliates div {
        background-color: var(--sl-color-white);
    }
</style>